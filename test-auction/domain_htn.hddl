(define (domain minehunting)
  (:requirements :typing)
  (:types
    location task robot - object
    area-to-cover - task
  )

  (:predicates 
    (parent ?t1 ?t2 - task)
  )

  (:task cover :parameters (?a - area-to-cover))

  (:method m-cover-d
    :parameters (?a ?a1 ?a2 - area-to-cover)
    :task (cover ?a)
    :precondition (and
      (not(= ?a1 ?a2))
      (parent ?a ?a1)
      (parent ?a ?a2)
      )
    :ordered-subtasks (and
      (cover ?a1)
      (cover ?a2)
      )
  )

)
